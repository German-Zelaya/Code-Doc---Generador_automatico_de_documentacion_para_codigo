[Unit]
Description=Code Doc Generator - Frontend
After=network.target

[Service]
Type=simple
User=codedoc
WorkingDirectory=/home/codedoc/Code-Doc-Generator/frontend
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
ExecStart=/usr/bin/npm run preview -- --host 0.0.0.0 --port 5173
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
