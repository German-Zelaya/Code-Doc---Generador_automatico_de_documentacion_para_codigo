[Unit]
Description=Code Doc Generator - Backend API
After=network.target ollama.service

[Service]
Type=simple
User=codedoc
WorkingDirectory=/home/codedoc/Code-Doc-Generator/backend
Environment="PATH=/home/codedoc/.local/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/usr/bin/python3 -m uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
